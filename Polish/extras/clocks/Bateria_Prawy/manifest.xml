<?xml version="1.0" encoding="utf-8"?>
<clock version="1" type="awesome" update_interval="60000" screenWidth="720" useVariableUpdater="Battery,DateTime.Second">
		<Group y="-50">
		<Time name="time" x="#screen_width-44" y="174" align="right" alignV="center" src="time.png"/>
		<Group visibility="not(#show_weather)">
			<DateTime x="#view_width-44" y="254" align="right" alignV="center" color="#ffffff" alpha="234" size="32" format="dd.MM.yyyy"/>
			<Text x="#view_width-44" y="296" align="right" alignV="center" color="#ffffff" alpha="234" size="32" format="Bateria: %d%%" paras="#battery_level" alpha="200"/>
		</Group>
	</Group>
    <!-- 触发点击事件 -->
    <Button name="clock_button" x="#view_width-#time.actual_w-39" y="74" w="#time.actual_w" h="#time.actual_h/2+138"/>
</clock>